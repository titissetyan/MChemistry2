<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <Button
        android:layout_width="1500dp"
        android:layout_height="50dp"
        android:background="#FF6600"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="MATERI KIMIA"
        android:id="@+id/button105"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#FF6600"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Konsep Mol"
        android:textColor="#FFFFFF"
        android:id="@+id/button106"
        android:layout_below="@+id/button105"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#FF6600"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Reaksi Kimia"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/button107"
        android:layout_below="@+id/button106"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#FF6600"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Elektrokimia"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/button108"
        android:layout_below="@+id/button107"
        android:layout_alignLeft="@+id/button107"
        android:layout_alignStart="@+id/button107" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#FF6600"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Sistem Periodik "
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/button109"
        android:layout_below="@+id/button108"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#FF6600"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Materi dan Perubahan"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/button110"
        android:layout_below="@+id/button109"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#FF6600"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:id="@+id/button111"
        android:layout_below="@+id/button110"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
